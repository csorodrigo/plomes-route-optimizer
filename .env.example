# Database
DATABASE_URL=sqlite:./data/app.db

# Ploome API Configuration
PLOOME_API_KEY=your_ploome_api_key_here
PLOOME_API_URL=https://api2.ploomes.com

# Geocoding Services API Keys (Optional but recommended for better accuracy)
# Google Maps Geocoding API - Free tier: 40,000 requests/month
GOOGLE_MAPS_API_KEY=

# Mapbox Geocoding API - Free tier: 100,000 requests/month  
MAPBOX_API_KEY=

# PositionStack API - Free tier: 25,000 requests/month
POSITIONSTACK_API_KEY=

# Geocoding Configuration
GEOCODING_DELAY_MS=500

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for production CORS)
FRONTEND_URL=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Session Configuration  
SESSION_SECRET=your_session_secret_here_change_in_production