# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database (Railway will provide persistent storage)
DATABASE_PATH=./backend/cache/customers.db

# Authentication (Railway will inject production secrets)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# Ploome API Configuration
PLOOME_API_KEY=${PLOOME_API_KEY}
PLOOME_API_URL=https://public-api2.ploomes.com

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=120
GEOCODING_DELAY_MS=1000

# Cache TTL (in seconds)
CACHE_TTL_CUSTOMERS=86400
CACHE_TTL_GEOCODING=2592000
CACHE_TTL_ROUTES=3600

# Geocoding API Keys
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
POSITIONSTACK_API_KEY=${POSITIONSTACK_API_KEY}
PENROUTE_API_KEY=${PENROUTE_API_KEY}