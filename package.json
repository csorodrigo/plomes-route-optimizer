{
  "name": "plomes-rota-cep-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de otimização de rotas integrado com Ploome CRM",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "nodemon backend/server.js",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "build:serve": "cd frontend && npm run build && npm run serve",
    "sync:ploome": "node backend/services/sync/sync-customers.js",
    "geocode": "node backend/geocode-all.js",
    "reset:user": "node backend/reset-default-user.js",
    "clean:db": "node backend/scripts/clean-database.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:polyline": "jest --testNamePattern=\"Polyline\"",
    "test:unit": "jest frontend/src/components/__tests__/RouteOptimizer.polyline.test.js",
    "test:integration": "jest frontend/src/components/__tests__/RouteOptimizer.integration.test.js",
    "test:e2e": "jest frontend/src/__tests__/e2e/polyline.e2e.test.js",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@mapbox/polyline": "^1.2.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "haversine-distance": "^1.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "p-limit": "^3.1.0",
    "undici": "^5.29.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.0",
    "babel-jest": "^29.5.0",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-transform-stub": "^2.0.0",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.1",
    "sqlite3": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "ploome",
    "route-optimization",
    "crm",
    "geolocation",
    "logistics"
  ],
  "author": "",
  "license": "MIT"
}
