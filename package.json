{
  "name": "plomes-rota-cep-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de otimização de rotas integrado com Ploome CRM",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "nodemon backend/server.js",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "build:serve": "cd frontend && npm run build && npm run serve",
    "sync:ploome": "node backend/services/sync/sync-customers.js",
    "geocode": "node backend/geocode-all.js",
    "reset:user": "node backend/reset-default-user.js",
    "clean:db": "node backend/scripts/clean-database.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^8.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "haversine-distance": "^1.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "p-limit": "^3.1.0",
    "polyline": "^0.2.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "ploome",
    "route-optimization",
    "crm",
    "geolocation",
    "logistics"
  ],
  "author": "",
  "license": "MIT"
}
